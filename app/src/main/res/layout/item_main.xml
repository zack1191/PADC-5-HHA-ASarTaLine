<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:cardElevation="8dp">

        <RelativeLayout
            android:id="@+id/rl_food"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/white_full">

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/iv_justice"
                android:text="Pizza"
                android:textColor="@color/black_full"
                android:textSize="24sp" />

            <org.mmtextview.components.MMTextView
                android:id="@+id/tv_food_disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_food"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/iv_justice"
                android:text="Cost $300 for one"
                android:textColor="@color/black_full"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/iv_justice"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy_image" />

            <RatingBar
                android:id="@+id/rb_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_food_disc"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin_medium"
                android:numStars="5"
                android:rating="4" />

            <org.mmtextview.components.MMTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin_medium"
                android:text="View Details"
                android:textColor="@color/black_full" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>